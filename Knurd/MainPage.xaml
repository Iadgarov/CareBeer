<Page
    x:Class="Knurd.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Knurd"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
      

            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <Button Name="marker" Height="50" Content="CareBeer" HorizontalAlignment="Center" Grid.Row="1"></Button>


        <Button Name="reactionGameButton" Height="50"  HorizontalAlignment="Center" Grid.Row="2" Content="Test Reaction time" Click="reactionGameButton_Click"></Button>
        <Button Name="accGraphButton" Height="50"  HorizontalAlignment="Center" Grid.Row="3" Content="See acceleremoter graph" Click="accGraphButton_Click"></Button>

    </Grid>
    
    

</Page>
